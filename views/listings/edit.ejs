<% layout('/layouts/boilerplate') -%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit listing</title>
  </head>
  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Here you can edit your listing</h3>
        <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              id=""
              value="<%= listing.title %>"
              class="form-control"
              required
            />
            <div class="valid-feedback">Title Looks Good!</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required>
<%= listing.description %></textarea
            >
            <div class="invalid-feedback">Description must be valid!</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                name="listing[price]"
                id=""
                value="<%= listing.price %>"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Price must be valid!</div>
            </div>
            <div class="mb-3 col-md-8">
              <label for="location" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                id=""
                value="<%= listing.country %>"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Country Name must be valid!</div>
            </div>
          </div>
          <div class="mb-3" style="width: 20rem;">
            Original Listing Image
            <img src="<%= originalImageUrl %>"
            style="height: 13rem;" class="card-img-top" alt="listing_image">
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input
              type="file"
              name="listing[image]"
              id=""
              class="form-control"
             
            />
            <div class="invalid-feedback">Image must be valid!</div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              id=""
              value="<%= listing.location %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Location must be valid!</div>
          </div>

          

          <button class="btn btn-danger px-3 mb-3">Edit</button>
        </form>
      </div>
    </div>
  </body>
</html>
