<% layout('/layouts/boilerplate') -%>

<div class="row">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
   
    <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              class="form-control"
              type="text"
              placeholder="Enter Your UserName"
              name="username"
              id="username"
              required
            />
            <div class="valid-feedback">Username Looks Good!</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              class="form-control"
              type="email"
              placeholder="Enter Your email"
              name="email"
              id="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              class="form-control"
              type="password"
              placeholder="Enter Your Pasword"
              name="password"
              id="password"
              required
            />
          </div>
          <button class="btn btn-primary mb-3">Signup</button>
    </form>
  </div>
</div>
